<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_addressbook</name>
    <creationDate>2014-04-19</creationDate>
    <copyright>Copyright (C) DigiOz Multimedia. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>Pete Soheil</author>
    <authorEmail>webmaster@digioz.com</authorEmail>
    <authorUrl>http://www.digioz.com</authorUrl>
    <version>1.0.3</version>
    <description>A small Address Book Component.</description>
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>addressbook.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
    </files>
    <languages folder="site">
        
			<language tag="en-GB">language/en-GB.com_addressbook.ini</language>
    </languages>
    <administration>
        <menu img="components/com_addressbook/assets/images/s_com_addressbook.png" >COM_ADDRESSBOOK</menu>
        <submenu>
            
			<menu link="option=com_addressbook&amp;view=addresses" view="addresses" img="components/com_addressbook/assets/images/s_addresses.png" alt="Addressbook/Addresses">COM_ADDRESSBOOK_TITLE_ADDRESSES</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>addressbook.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="administrator">
            
			<language tag="en-GB">language/en-GB.com_addressbook.ini</language>
			<language tag="en-GB">language/en-GB.com_addressbook.sys.ini</language>
        </languages>
    </administration>
</extension>
